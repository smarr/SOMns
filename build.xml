<project name="som" basedir="." default="compile">

    <property name="src.dir"     value="src"/>
    <property name="lib.dir"     value="libs" />

    <property name="build.dir"   value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    
    <property name="truffle.libs" value="http://soft.vub.ac.be/~smarr/downloads/truffle/latest"/>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>
    
    <target name="libs">
      <mkdir dir="${lib.dir}" />
      <get src="${truffle.libs}/com.oracle.truffle.api.jar"
           dest="${lib.dir}/com.oracle.truffle.api.jar"/>
      <get src="${truffle.libs}/com.oracle.truffle.api.dsl.jar"
           dest="${lib.dir}/com.oracle.truffle.api.dsl.jar"/>
      <get src="${truffle.libs}/com.oracle.truffle.dsl.processor.jar"
           dest="${lib.dir}/com.oracle.truffle.dsl.processor.jar"/>
    </target>

    <target name="compile" depends="libs">
        <mkdir dir="${classes.dir}" />
        <javac includeantruntime="false" srcdir="${src.dir}" destdir="${classes.dir}" debug="true">
          <classpath>
            <pathelement location="${lib.dir}/com.oracle.truffle.api.jar" />
            <pathelement location="${lib.dir}/com.oracle.truffle.api.dsl.jar" />
            <pathelement location="${lib.dir}/com.oracle.truffle.dsl.processor.jar" />
          </classpath>
        </javac>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="${build.dir}"/>
        <jar destfile="${build.dir}/som.jar" basedir="${classes.dir}"></jar>
    </target>

    <target name="test" depends="compile">
        <java classname="som.vm.Universe" fork="true" failonerror="true">
            <classpath>
                <pathelement location="${classes.dir}" />
                <pathelement location="${lib.dir}/com.oracle.truffle.api.jar" />
                <pathelement location="${lib.dir}/com.oracle.truffle.api.dsl.jar" />
                <pathelement location="${lib.dir}/com.oracle.truffle.dsl.processor.jar" />
            </classpath>
            <arg line="-cp Smalltalk TestSuite/TestHarness.som" />
        </java>
    </target>

</project>
