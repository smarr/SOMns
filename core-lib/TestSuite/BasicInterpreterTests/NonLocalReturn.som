class NonLocalReturn = ()():(

    public test1 = ( | t1Frame |
      [ | nlrFrame |
        ^ 42 ] value
    )
    public test2 = ( ^ self test1 + 1 )
    public test3 = ( [ self test1. ^ 3 ] value )
    
    public test4 = ( ^ self at: 11 )
    public test5 = ( ^ self at: 10000 )
    
    (* Test case borrowed from Vector *)
    at: index = ( self checkIndex: index ifValid: [ ^ 42 ].
      (* else *) ^ 22 )
    checkIndex: index ifValid: block = (
        (10 <= index) && (index <= 100)
            ifTrue:  [ ^ block value ]
            ifFalse: [ #dontcare ]
    )
)
