PerformAdd = Benchmark (
    | calc |
    
    initialize = (
        calc:: Calculator new.
    )

    benchmark = (
        calc initializeWith: 5.
    
        1 to: 20000 do: [ :i | 
            calc perform: #inc: withArguments: (Array with: #once)
        ].
    
        calc a = 20005 ifFalse: [ 'Benchmark failed with wrong result' println. calc a println. ]
    )
    
    ----
    
    new = (
        ^ super new initialize
    )
)
